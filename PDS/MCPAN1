)ATTR
$ TYPE(TEXT) INTENS(LOW) COLOR(RED)
Â¬ TYPE(TEXT) INTENS(HIGH) COLOR(YELLOW)
~ TYPE(TEXT) INTENS(HIGH) COLOR(GREEN)
)BODY
%                   /* --- (M)OVE(C)OPY DATASET --- */              (V3)
%
%
% DSNAME          $==>_DSN                                        +
%
% ACTION           ==>_ACT+    C=COPY, M=MOVE
% SOURCE VOLUME    ==>_SVOL  +~REQUIRED IF DS NOT CATALOGUED
% TARGET VOLUME    ==>_TVOL  +~REQUIRED ("=" EQUAL VOLIDS)+
% NEW TARGET NAME  ==>_TNAME                                      +
%                                       ("*" SOURCE DSN.*")
% CATALOG          ==>_CATL+  (Y/N)
% REPL EXISTING DS ==>_REPL+  (Y/N)
% BYPASS SMS       ==>_BYSMS+ (Y/N)+~MUST BE AUTHORIZED+
%
% "PF3" TO EXIT
)INIT
  IF (&SMS EQ 'Y')
     &TVOL=&SVOL
     &CATL='Y'
  IF (&WILD EQ 'Y')
    .CURSOR = TNAME
  VGET (CATL)  PROFILE
  VGET (REPL)  PROFILE
  VGET (BYSMS) PROFILE
  VGET (WILD)  PROFILE
  VPUT (ACT)   PROFILE
  VPUT (TVOL)  PROFILE
  VPUT (TNAME) PROFILE
  VPUT (CATL)  PROFILE
  VPUT (REPL)  PROFILE
  VPUT (BYSMS) PROFILE
)PROC
  VER(&ACT,NONBLANK,LIST,C,M)
  VPUT (ACT) PROFILE
  VER(&SVOL,NONBLANK,INCLUDE,ALPHA,NUM)
  VPUT (SVOL) PROFILE
  IF (&TVOL NE '=')
      VER(&TVOL,NONBLANK,INCLUDE,ALPHA,NUM)
  VPUT (TVOL) PROFILE
  IF (&TNAME NE '')
    IF (&TNAME NE '*')
       VER(&TNAME,DSNAME)
  VPUT (TNAME) PROFILE
  VER(&CATL,NONBLANK,LIST,Y,N)
  VPUT (CATL) PROFILE
  VER(&REPL,NONBLANK,LIST,Y,N)
  VPUT (REPL) PROFILE
  VER(&BYSMS,NONBLANK,LIST,Y,N)
  VPUT (BYSMS) PROFILE
)END
